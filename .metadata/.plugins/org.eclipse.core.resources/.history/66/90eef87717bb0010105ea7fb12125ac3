package vista;

import vista.panel.ClientesPanel;
import vista.panel.DireccionesPanel;
import vista.panel.ContactosPanel;

import javax.swing.*;
import java.awt.*;

public class FrmInicio extends JFrame {
    public FrmInicio() {
        setTitle("Empresa Â· One Page");
        setDefaultCloseOperation(EXIT_ON_CLOSE);

        Dimension s = Toolkit.getDefaultToolkit().getScreenSize();
        setSize(Math.max(1000, (int)(s.width*0.9)), Math.max(600, (int)(s.height*0.85)));
        setLocationRelativeTo(null);

        var tabs = new JTabbedPane();
        tabs.addTab("Clientes",    new ClientesPanel());
        tabs.addTab("Direcciones", new DireccionesPanel());
        tabs.addTab("Contactos",   new ContactosPanel());

        add(tabs);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> new FrmInicio().setVisible(true));
    }
}

